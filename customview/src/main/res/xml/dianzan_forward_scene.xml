<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/forward"
        app:constraintSetEnd="@id/imageview"
        app:constraintSetStart="@+id/imageview"
        app:duration="500">
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/imageview"
                app:framePosition="20"
                android:scaleX="0.3"
                android:scaleY="0.3"
                >
                <CustomAttribute
                    app:attributeName="crossfade"
                    app:customFloatValue="1" />
            </KeyAttribute>

            <KeyAttribute
                app:motionTarget="@+id/imageview"
                app:framePosition="80"
                android:scaleX="1.2"
                android:scaleY="1.2" />

            <KeyAttribute
                app:motionTarget="@+id/imageview"
                app:framePosition="90"
                android:scaleX="0.8"
                android:scaleY="0.8" />

        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/revert"
        app:constraintSetEnd="@id/revert_end"
        app:constraintSetStart="@+id/revert_start"
        app:duration="50">

    </Transition>

    <ConstraintSet android:id="@+id/revert_start">
        <Constraint android:id="@+id/imageview" >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/revert_end">
        <Constraint android:id="@+id/imageview" >
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>
